                </when>
                <when test="criterion.listValue">
                  and ${criterion.condition}
                  <foreach close=")" collection="criterion.value" item="listItem" open="(" separator=",">
                    #{listItem}
                  </foreach>
                </when>
              </choose>
            </foreach>
          </trim>
        </if>
      </foreach>
    </where>
  </sql>
  <sql id="Base_Column_List">
    uId, password, type
  </sql>
  <!-- 查询用户列表（带模糊查询） -->
  <select id="findList" parameterType="Map" resultType="com.xiao.programmer.entity.origin.User">
    select * from user where uid like #{uid} limit #{offset},#{pageSize}
  </select>
</mapper>